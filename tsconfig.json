{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "paths": {
      "$*": [
        "*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "**/__tests__/**"
  ],
}